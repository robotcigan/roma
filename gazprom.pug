extends layout-inner.pug

block content
  .grid.grid--container
    header.project
      .project__word Проект
      h1.project__title Газпром
      .project__done Выполненная работа
      .project__description Дизайн сайта для Краснодарского отделения ПАО «Газпром».
      a(href="").project__link
        img(src="img/link.png", alt="")

    section.portfolio
      .portfolio__img.portfolio__img--first.wow
          img(src="./img/gazprom/1.jpg", alt="")
      -for(var i = 2; i < 10; i++)
        .portfolio__img.wow
          img(src="./img/gazprom/" + i + ".jpg", alt="")

  .next-project
    a(href="./megachas.html").next-project__item
      .next-project__container
        .next-project__word Следующий проект
        .next-project__project Мегачас
        .next-project__arrow
          img(src="./img/arrow-down.png", alt="")
  .to-top
    .to-top__icon
      img(src="img/arrow-up.png", alt="")
    //- .to-top__word наверх