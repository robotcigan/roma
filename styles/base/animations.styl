@keyframes scroll
  0%
    transform translateY(-100%)
  100%
    transform: translateY(200%)

@keyframes i
  0%
    opacity 0
  100%
    opacity 100%

$screen = 100%

@keyframes animation-block-up
  0%
    top -$screen
  100%
    top $screen

@keyframes animation-block-down
  0%
    top $screen
  100%
    top -$screen

@keyframes next-project
  0%
    transform translateY(100vh)
  100%
    transform none
