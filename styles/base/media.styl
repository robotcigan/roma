@media(max-width 1900px)
  html
    font-size 55%
@media(max-width 1900px)
  html
    font-size 50%

@media(max-width 1400px)
  .super-gallery
    transform translateY(-13.8rem)
  .portfolio-word
    transform none

@media(max-width 1200px)
  body
    background black
  .page
    padding 0 4%
  .animation-block
    display none
  .name
    transform none
    margin-bottom 50vh
    margin-top 0
    padding 0
    transform translateY(25vh)
  .roman
    display block
  // .section
  //   height initial !important
  .section
    &--first
      .down
        display block
        right initial
        text-align center
        width 100%
        img
          display inline-block
    &--second
      height initial !important
      .section__container
        transform none
  .main-header
    display flex
    justify-content space-between
    left 0
    padding 2rem 4%
    &__right
      display none
    &__info
      flex-shrink 0
      transform none
      text-align right
      flex-grow 1
  .section
    &__bg
      height 100vh
  .roman
    transform none
  .down
    display none
  .fullpage
    &__text
      margin-bottom 18rem
      .h2
        font-size 3rem
        span:after
          opacity 1
          width 100%
      p
        padding-left 0
    &__mobile-hide
      display none !important
    &__links
      display flex
      justify-content center
      padding 0
  .super-gallery
    &__row
      position initial
      overflow-Y initial
      &--first
      &--second
        width initial !important
        .super-gallery__col
          float left
          // width 50%
          width 100%
          &:not(.for-copy)
            display none
      &--second
        display none
      .work-small
        opacity 1
        transform none
        &__title
          font-size 3.6rem
          // margin-bottom 0
          margin-bottom 3rem
        // &__done
        //   display none
        // &__anons
        //   display none
      &--first .super-gallery__col:after
        opacity .75
    &__col
      // height 18rem !important
      height 36rem !important
  .portfolio-word
    transform translateY(-5rem)

@media(max-width 1000px)
  .ivanov
    font-size 19vw

@media(max-width 767px)
  .fullpage__text
    .h2
      font-size 3rem
      margin-bottom 3rem
      br
        display none
    p
      font-size 1.8rem
      font-weight 400
  .super-gallery
    &__row
      position initial
      overflow-Y initial
      &--first
      &--second
        width initial !important
        .super-gallery__col
          width 100%
      &--second
        .super-gallery__col
          width 50%
    &__col
      height 20rem !important
    .work-small
      &__title
        margin-bottom 0
      &__done
        display none
      &__anons
        display none