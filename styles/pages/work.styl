.portfolio
  &__img
    box-shadow 0 5rem 6rem 0 rgba(#000, .2)
    margin-bottom 27rem
    img
      display block
      max-width 100%

.next-project
  overflow hidden
  transform translateY(-100vh)
  &__container
    animation next-project .7s cubic-bezier(0.645, 0.045, 0.355, 1) forwards
    align-items center
    cursor pointer
    display flex
    justify-content center
    height 100vh
    margin 0 auto
    position relative
    will-change transform, height
    width 100%
  &__bg
    background-position center
    background-repeat no-repeat
    background-size cover
    height 100%
    left 0
    position absolute
    top 0
    transition filter .5s, opacity .5s
    width 100%
  &__next
    color rgba(#fff, .3)
    font-size 2.4rem
    font-weight 300
    letter-spacing 2px
    text-transform uppercase
    transition color .5s

.project
  margin-top 5rem
  margin-top (50 / 1080 * 100)vh
  margin-bottom 8rem
  text-align center
  &__word
    font-weight 600
    opacity .25
    margin-bottom 3rem
    text-transform uppercase
  &__title
    font-size 7.2rem
    font-weight 700
    line-height 1
    margin 0
    margin-bottom 6rem
  &__done
    font-weight 600
    opacity .25
    margin-bottom 3rem
    text-transform uppercase
  &__description
    font-size 2rem
    font-weight 600
    margin-bottom 5rem
  &__link
    display inline-block
    line-height 1
    opacity .25
    position relative
    transition opacity .8s ease
    &:after
      box-shadow 0 0 0 0 #a7b0b6
      border-radius 50%
      content ''
      circle(50px)
      left 0
      position absolute
      top 0
      transition transform .4s
    &:hover
      opacity 1
      &:after
        box-shadow 0 0 20px 0 #a7b0b6
        transform scale(1.5)

.to-top
  cursor pointer
  display inline-block
  position fixed
  right (10 / 1900 * 100)%
  top (760 / 1080 * 100)vh
  &__word
    display inline-block
    fz1.40rem
    font-weight 600
    transform rotate(-90deg) translate(-3rem, -2.5rem)
    text-transform uppercase

@media(max-width 1200px)
  .to-top
    display none