.fullpage
  opacity 0
  transition opacity 1s
  &__text
    .h2
      display block
      margin-bottom 5rem
      position relative
      &:after
        background-color #f00
        bottom -1rem
        content ''
        height 2px
        left 0
        position absolute
        width 41rem
    p
      color #848484
      display block
      font-size 2.4rem
      font-weight 600
      padding-left 22rem
  &--is-load
    opacity 1

.roman
  background url('../../img/roman.png') center center no-repeat
  background-size contain
  display block
  height 100%
  opacity .03
  width 100%

.name
  height calc(100vh - 12.2rem)
  position relative
  .ivanov
    align-items center
    display flex
    bottom 0
    height (630 / 965 * 100)vh
    margin auto
    position absolute
    top 0
    width 100%
  .i
    animation i 1s 3s forwards
    background url('../../img/i.png') no-repeat
    background-size contain
    background none
    display none
    height 100%
    position relative
    width (544 / 1900 * 100)vw
    &:after
      background url('../../img/i-photo.png') no-repeat
      background-size contain
      content ''
      left 0
      height 100%
      position absolute
      top 0
      width 100%
    &--animation
      display block
  .vanov
    display block
    font-size 23rem
    font-weight 700
    line-height 1

