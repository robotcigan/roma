.section__container
  &--second
    transform translateY(13rem)
  &--third
    align-items flex-end
    display flex
    height 100%
    position relative
    
    
.fullpage__links
  margin-top 2rem
  padding-left 50rem
.fullpage__link
  display inline-block
  overflow hidden
  position relative
  vertical-align top
  text-align center
  width 4rem
  &:after
    background-color #fff
    content ''
    height 2px
    opacity 1
    left -4rem
    position absolute
    top 1rem
    transition all .2s
    width 4rem
  &:hover
    &:after
      opacity 1
      left 0
  &:first-child
    margin-right 3rem
