.section
  position relative
  &__bg
    background url('../../img/ava.png') top center no-repeat
    background-size cover
    height 100%
    transform translateY(-12rem)
    position absolute
    width 100%
    z-index -1

.animation-block
  animation-timing-function ease
  circle(100%)
  display none
  content ''
  left 0
  position fixed
  top -100vh
  transition all .5s
  z-index 500
  &--up
    animation-name animation-block-up
  &--down
    animation-name animation-block-down
  &--white
    // animation animation-block 1s ease
    animation-duration 1s
    background-color #fff
  &--red
    // animation animation-block 1.1s .1s ease
    animation-duration 1.1s
    animation-delay .1s
    background-color $primary
  &--active
    display block

.section__container
  &--second
    // transform translateY(13rem)
    transform translateY(10vh)
  &--third
    align-items flex-end
    flex-wrap wrap
    display flex
    height 100%
    position relative

.portfolio-word
  background url('../../img/portfolio.png') center no-repeat
  background-size contain
  height 21rem
  opacity .05
  margin-left 1%
  padding 0 1rem
  width 98%
    
.fullpage__links
  margin-top 6rem
  padding-left 50rem
.fullpage__link
  display inline-block
  height 4rem
  overflow hidden
  position relative
  vertical-align top
  text-align center
  width 4rem
  &:after
    background-color $primary
    content ''
    height 2px
    opacity 1
    left -4rem
    position absolute
    top 3.5rem
    transition all .2s
    width 4rem
  &:hover
    &:after
      opacity 1
      left 0
  &:first-child
    margin-right 3rem

.down
  cursor pointer
  bottom 18rem
  position absolute
  right (130 / 1900 * 100)vw
  transition transform .4s
  img
    display block
  &:hover
    transform translateY(1rem)



