.fullpage
  opacity 0
  transition opacity 1s
  &__text
    .h2
      display block
      margin-bottom 5rem
      span
        display inline-block
        position relative
        &:after
          background-color #f00
          bottom -1rem
          content ''
          height 2px
          left 0
          position absolute
          width 100%
    p
      color #848484
      display block
      font-size 2.4rem
      font-weight 600
      padding-left (220 / 950 * 100)%
  &--is-load
    opacity 1

.name
  padding 0 (305 / 1900 * 100)vw
  transform translateY(230 / 1000 * 100vh)
.roman
  display inline-block
  line-height 1
  font-size 2.6rem
  transform translateY(3rem)
  vertical-align top

.ivanov
  display inline-block
  // font-size 23.8rem
  font-size 13vw
  font-weight 800
  line-height 1
  text-transform uppercase
  vertical-align top
  span
    color $primary
    line-height 1

