@import 'helpers/variables.styl'
@import 'helpers/mixins.styl'
@import 'helpers/helpers.styl'

@import 'base/base.styl'
@import 'base/animations.styl'
@import 'base/typography.styl'

@import 'pages/index.styl'
@import 'pages/work.styl'

$firstHeight = 49.1vh
// $secondHeight = 24.5vh
$secondHeight = 15.8rem


.page
  background-color $black
  color $main
  // height 100vh
  overflow-x hidden
  margin 0
  padding 0
  &--scrolling
    overflow hidden
    height 100vh

.empty
  height 12rem

.main-header
  clearfix()
  // padding 3rem (80 / 1900 * 100)%
  padding (90 / 1150 * 100)vh (80 / 1900 * 100)%
  position fixed
  top 0
  width 100%
  z-index 200
  &__left
    float left
    position relative
    z-index 10
    &:hover
      .logo
        opacity .4
        transform scale(.8)
        & + .back
          opacity 1
          transform translateX(-3rem)
  &__info
    float left
    transform translate(-11rem, .8rem)
  &__right
    float right

.numbers
  line-height 1
  transform translateY(25 / 1050 * 100vh)
  .number
    color #fff
    display inline-block
    opacity .15
    font-size 1.6rem
    font-weight 600
    line-height 1
    text-decoration none
    transition all .4s
    &:not(:last-child)
      margin-right 2.5rem
    &:hover
      opacity .5
    &--active
      opacity 1
      transform translateY(-2.5rem)


.logo
  background url('../../img/logo.png') no-repeat 50%
  background-size contain
  circle(6.2rem)
  display inline-block
  vertical-align middle
  transition all .2s ease .05s

.back
  color #fff
  display inline-block
  opacity 0
  vertical-align middle
  text-decoration none
  transition all .2s ease .05s
  transform none
  &__icon
    display inline-block
    margin-right 1rem
    vertical-align middle
    transform translateY(3px)
  &__word
    display inline-block
    font-size 1.6rem
    font-weight 600
    vertical-align middle
    text-transform uppercase

.phone
  color #fff
  display block
  font-weight 600
  opacity .25
  text-decoration none
  transition opacity .4s
  &:hover
    opacity 1

.mail
  color #ff
  display block
  font-weight 600
  opacity .25
  // text-align right
  text-decoration none
  transition opacity .4s
  &:hover
    opacity 1

.super-gallery
  display block
  height $firstHeight + $secondHeight
  position relative
  transform translateY(-14rem)
  width 100%
  &__row
    clearfix()
    left 0
    overflow-Y hidden
    position absolute
    top 0
    width calc(400vw + 1px)
    &--first
      height $firstHeight
      .super-gallery
        &__col
          height $firstHeight
          width 50vw
    &--second
      height $secondHeight
      top $firstHeight
      .super-gallery
        &__col
          height $secondHeight
          width (100 / 6)vw
  &__col
    align-items center
    background no-repeat
    background-size cover
    background-position 50%
    display flex
    justify-content center
    float left
    overflow hidden
    position relative
    transition transform .1s linear
    text-decoration none
    text-align center
    &:hover
      .super-gallery__color
        opacity 1
  &__color
    height 100%
    opacity 0
    position absolute
    transition opacity .6s
    width 100%
    z-index -1
  img
    display block
    max-width 100%

.super-gallery__row
  &--first
    .super-gallery__col
      position relative
      &:after
        background-color #070707
        circle(100%)
        content ''
        left 0
        opacity 0
        position absolute
        top 0
        transition opacity .4s
        z-index 0
      &:hover
        &:after
          opacity .75
        .work-small
          opacity 1
          transform none

.work-small
  color #fff
  opacity 0
  position relative
  text-decoration none
  transform translateY(1rem)
  transition all .4s
  z-index 10
  &__word
    color $gray
    font-weight 700
    line-height 1
    margin-bottom .8rem
    text-transform uppercase
  &__title
    font-size 7.2rem
    font-weight 700
    line-height 1
    margin-bottom 4rem
  &__done
    color $gray
    font-weight 700
    line-height 1
    margin-bottom .5rem
    text-transform uppercase
  &__anons
    font-size 2rem

@import 'base/media.styl'