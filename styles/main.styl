@import 'helpers/variables.styl'
@import 'helpers/mixins.styl'
@import 'helpers/helpers.styl'

@import 'base/base.styl'
@import 'base/animations.styl'
@import 'base/typography.styl'

@import 'pages/index.styl'
@import 'pages/work.styl'

$firstHeight = 49.1vh
$secondHeight = 24.5vh


.page
  background-color $black
  color $main
  // height 100vh
  overflow-x hidden
  margin 0
  padding 0
  &--scrolling
    overflow hidden
    height 100vh

.empty
  height 12rem

.main-header
  clearfix()
  padding 3rem (80 / 1900 * 100)%
  position fixed
  top 0
  width 100%
  z-index 200
  &__left
    float left
    &:hover
      .logo
        opacity .4
        transform scale(.8)
        & + .back
          opacity 1
          transform translateX(-3rem)
  &__right
    float right


.logo
  background url('../../img/logo.png') no-repeat 50%
  background-size contain
  circle(6.2rem)
  display inline-block
  vertical-align middle
  transition all .2s ease .05s

.back
  color #fff
  display inline-block
  opacity 0
  vertical-align middle
  text-decoration none
  transition all .2s ease .05s
  transform none
  &__icon
    display inline-block
    margin-right 1rem
    vertical-align middle
    transform translateY(3px)
  &__word
    display inline-block
    font-size 1.6rem
    font-weight 600
    vertical-align middle
    text-transform uppercase

.phone
  color #fff
  display block
  font-weight 600
  text-decoration none

.mail
  color #ff
  display block
  font-weight 600
  text-align right
  text-decoration none

.super-gallery
  display block
  height $firstHeight + $secondHeight
  position relative
  transform translateY(-12rem)
  width 100%
  &__row
    clearfix()
    left 0
    overflow-Y hidden
    position absolute
    top 0
    width calc(400vw + 1px)
    &--first
      height $firstHeight
      .super-gallery
        &__col
          height $firstHeight
          width 50vw
    &--second
      height $secondHeight
      top $firstHeight
      .super-gallery
        &__col
          height $secondHeight
          width 25vw
  &__col
    align-items center
    background no-repeat
    background-size cover
    background-position 50%
    display flex
    justify-content center
    float left
    overflow hidden
    position relative
    transition transform .1s linear
    &:hover
      .super-gallery__color
        opacity 1
  &__color
    height 100%
    opacity 0
    position absolute
    transition opacity .6s
    width 100%
    z-index -1
  img
    display block
    max-width 100%

@import 'base/media.styl'