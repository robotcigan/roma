extends layout-inner.pug

block content
  .grid.grid--container
    header.project
      .project__word Проект
      h1.project__title Матрас-сити
      .project__done Выполненная работа
      .project__description Дизайн сайта интернет-магазина матрасов и пастельных пренадлежностей.
      a(href="").project__link
        img(src="img/link.png", alt="")

    section.portfolio
      .portfolio__img.wow
          img(src="./img/matras/1.jpg", alt="")
      -for(var i = 2; i < 10; i++)
        .portfolio__img.wow
          img(src="./img/matras/" + i + ".jpg", alt="")

  .next-project
    a(href="./saturn.html").next-project__item
      .next-project__container
        .next-project__word Следующий проект
        .next-project__project Сатурн
        .next-project__arrow
          img(src="./img/arrow-down.png", alt="")
  .to-top
    .to-top__icon
      img(src="img/to-top.png", alt="")
    .to-top__word наверх